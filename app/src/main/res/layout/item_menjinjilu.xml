<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_date_gone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="92.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menjinjilu_up"
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:background="@drawable/a_bg_theprogressbar" />

            <ImageView
                android:id="@+id/iv_menjinjilu_date"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/a_icon_time" />

            <ImageView
                android:id="@+id/iv_menjinjilu_below"
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:background="@drawable/a_bg_theprogressbar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="37dp"
            android:background="@drawable/a_btn_time"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_menjinjilu_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-05-05" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_menjinjilu_xingqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="星期一" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/view_gone"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_menjinjilu_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:12:12"
            android:textColor="#323232"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menjinjilu_item_up"
                android:layout_width="2dp"
                android:layout_height="37dp"
                android:background="@drawable/a_bg_theprogressbar" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:background="@drawable/a_icon_blue1" />

            <ImageView
                android:id="@+id/iv_menjinjilu_item_below"
                android:layout_width="2dp"
                android:layout_height="36dp"
                android:background="@drawable/a_bg_theprogressbar" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_menjinjilu_sex"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/a_icon_display" />

        <com.bjxiyang.zhinengshequ.myapplication.view.CircleImageView
            android:id="@+id/iv_menjinjilu_touxiang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/c_img_touxiang" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menjinjilu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="#323232"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/menjinjilu_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="5dp"
                android:text="地址"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>


    <!--<ListView-->
       <!--android:id="@+id/lv_menjinjilu_item"-->
       <!--android:layout_width="match_parent"-->
       <!--android:layout_height="wrap_content"></ListView>-->

</LinearLayout>
