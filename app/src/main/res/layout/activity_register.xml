<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/a_bg_logo">
    <View
        android:fitsSystemWindows="true"
        android:background="#4183FF"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <FrameLayout
        android:id="@+id/callbackLayout"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_height="wrap_content"
            android:src="@drawable/a_btn_return"
            android:layout_gravity="center"/>

    </FrameLayout>
    <!--<ImageView-->
        <!--android:layout_width="12dp"-->
        <!--android:layout_height="21dp"-->
        <!--android:background="@drawable/a_btn_return"-->
        <!--android:layout_marginLeft="15dp"-->
        <!--android:layout_marginTop="13dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="注册账号"
            android:textColor="#323232"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_title_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="感谢您注册本产品"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="手机号"
            android:textSize="15sp" />

        <EditText
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:id="@+id/inputusernameedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:background="@null"
            android:inputType="number" 
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"
            android:layout_marginTop="15dp"></View>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="验证码"
            android:textSize="15sp" />

        <EditText
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:id="@+id/et_reg_smscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:background="@null"
            android:inputType="number"
            android:textSize="15sp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_get_smscode"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="发送验证码"
        android:textColor="#323232"
        android:background="@drawable/b_btn_send"
        android:textSize="12sp" 
        android:layout_gravity="center_vertical"/>
</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"
            android:layout_marginTop="15dp"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="密码"
            android:textSize="15sp" />

        <EditText
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:id="@+id/et_reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textSize="15sp" />
        <!--android:inputType="number"-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"
            android:layout_marginTop="15dp"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="确认密码"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_zhuce_password_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:background="@null"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            android:layout_marginTop="10dp" />
        <!--android:inputType="number"-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"
            android:layout_marginTop="15dp"></View>

        <Button
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:id="@+id/reg_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/a_btn_loginto"
            android:layout_marginTop="20dp"
            android:text="注册" />

        <LinearLayout
            android:id="@+id/ln_fuwutiaokuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="同意" />

            <TextView
                android:id="@+id/tv_pro_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="《希洋科技用户协议》"
                android:textColor="#2e77ff" />
        </LinearLayout>
      
    </LinearLayout>

</LinearLayout>
