<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp">
        <com.bjxiyang.zhinengshequ.myapplication.view.CircleImageView
            android:id="@+id/tv_touxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/h_img_touxiang"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="昵称"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_shafa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="沙发"
           />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_neirong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论内容" 
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/lv_item_pinglun"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="35dp">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"  
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_pinglunriqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08-06"
         />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_pinglunshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:55" 
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_pinglun"
            android:layout_width="17dp"
            android:layout_height="12dp"
            android:background="@drawable/b_icon_reply"/>

        <TextView
            android:id="@+id/tv_pinglunhuifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</LinearLayout>
