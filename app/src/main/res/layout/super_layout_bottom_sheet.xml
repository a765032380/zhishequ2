<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/a_bg_kuang"
        android:layout_marginBottom="70dp"
        android:layout_width="match_parent"
        android:layout_height="450dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView android:text="购物车"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text="清空"
            android:textSize="18sp"
            android:id="@+id/clear"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:id="@+id/title_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/xian" />

    <ListView
        android:layout_marginBottom="15dp"
        android:id="@+id/lv_product"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/super_product_item">
    </ListView>

    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-70dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@drawable/a_img_beignorantof">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:textColor="#2b5e8e"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_totle_money2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#2b5e8e"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/xuanhaole"
                android:layout_width="110dp"
                android:layout_height="44dp"
                android:text="选好了"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/a_btn_acknowledgement"/>
        </LinearLayout>



    </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-60dp">

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <LinearLayout
                android:id="@+id/ll_shopcar"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_car"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/a_icon_shoppingtrolley_pre" />

                <TextView
                    android:id="@+id/bv_unm"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="-15dp"
                    android:background="@drawable/a_img_tishi"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:visibility="visible" />
            </LinearLayout>
        </RelativeLayout>


</LinearLayout>