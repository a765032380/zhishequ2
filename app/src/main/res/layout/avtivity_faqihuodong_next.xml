<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">
    <View
        android:background="#4183FF"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4183FF"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_fanghui"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_weight="0.9">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/c_icon_fanhui"
                android:paddingTop="7dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:text="发起活动"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rl_done"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_weight="1.4"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_wancheng"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="完成"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff">

        <EditText
            android:id="@+id/et_startActivities_jieshao"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入本次活动介绍"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_addimg1"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:background="@drawable/c_a_a_btn_add" />

            <ImageView
                android:id="@+id/iv_delete1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/c_a_a_btn_delete"
                android:layout_marginTop="-105dp"
                android:layout_marginLeft="80dp" 
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_addimg2"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:background="@drawable/c_a_a_btn_add" />

            <ImageView
                android:id="@+id/iv_delete2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/c_a_a_btn_delete"
                android:layout_marginTop="-105dp"
                android:layout_marginLeft="80dp"
                android:visibility="invisible"/>
       
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_addimg3"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:background="@drawable/c_a_a_btn_add" />

            <ImageView
                android:id="@+id/iv_delete3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-105dp"
                android:background="@drawable/c_a_a_btn_delete"
                android:visibility="invisible" />
        </LinearLayout>

      
    </LinearLayout>

  

</LinearLayout>


